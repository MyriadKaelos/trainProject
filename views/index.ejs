<html>
<head>
</head>
<body>
    <fieldset>
        <legend>Add Rolling Stock</legend>
        <form action="/addRollingStock" method="POST">
            <table>
                <tr>
                    <td><input type="number" name="weight"/></td>
                    <td>
                        <select name="type">
                            <option value="engine">Engine</option>
                            <option value="dining">Dining</option>
                            <option value="storage">Storage</option>
                            <option value="material">Material</option>
                            <option value="sleeper">Sleeper</option>
                        </select>
                    </td>
                    <td><input type="text" name="model"/></td>
                    <td><input type="number" value="0" name="horsePower"/></td>
                    <td><input type="submit" name="submit"/></td>
                </tr>
                <tr>
                    <td>Weight</td>
                    <td>Type</td>
                    <td>Model</td>
                    <td>HorsePower</td>
                </tr>
            </table>
        </form>
    </fieldset>
    <fieldset>
        <legend>Add Company</legend>
        <form action="/addCompany" method="POST">
            <table>
                <tr>
                    <td><input type="text" name="name"/></td>
                    <td><input type="submit" name="submit"/></td>
                </tr>
                <tr>
                    <td>Name</td>
                </tr>
            </table>
        </form>
    </fieldset>
    <fieldset>
        <legend>Add Empty Train</legend>
        <form action="addTrain" method="POST">
            <input type="submit" name="submit"/>
        </form>
    </fieldset>
    <fieldset>
        <form action="/addTrainToCompany" method="POST">
            <select name="company">
                <% for(var i = 0; i < companies.length; i ++) { %>
                    <option value="<%= companies[i].id %>"><%= companies[i].name %></option>
                <% } %>
            </select>
            <select name="train">
                <% for(var i = 0; i < trains.length; i ++) { %>
                <option value="<%= trains[i].id %>"><%= trains[i].name %></option>
                <% } %>
            </select>
        </form>
    </fieldset>
</body>
</html>